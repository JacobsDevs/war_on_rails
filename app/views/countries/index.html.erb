<h1>Countries</h1>

<table>
	<tr>
		<th>Name</th>
		<th>Alliance</th>
		<th>Strength</th>
		<th>Active in War?</th>
	</tr>
	<% @countries.each do |country| %>
	<tr>
		<td><a href="/countries/<%= country.id %>"><%= country.name %></a></td>
		<td><%= country.alliance %></td>
		<td><%= country.strength %></td>
		<td><%= country.active_in_war %></td>
	</tr>
	<% end %>
</table>